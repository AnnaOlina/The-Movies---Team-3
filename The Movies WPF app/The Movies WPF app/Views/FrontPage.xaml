<Window x:Class="The_Movies_WPF_app.Views.FrontPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Movies_WPF_app.Views"
        mc:Ignorable="d"
        Title="FrontPage" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="Black" Offset="0.671"/>
                <GradientStop Color="Gray" Offset="0"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Label Content="The Movies" HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top" FontFamily="DejaVu Serif" FontSize="50" FontStyle="Oblique" FontWeight="Bold" Background="#00000000" Foreground="#FFA62C37"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" >
            <Button Width="130" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,10,0" Background="#b6bfc1" Content="Registrer Film" FontWeight="Bold" 
                    Click="Movie_Button_Click"></Button>
            <Button Width="130" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,10,0" Background="#b6bfc1" Content="Se Månedsplan" FontWeight="Bold"
                    Click="MonthlySchedule_Button_Click"></Button>
            <Button Width="130" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,10,0" Background="#b6bfc1" Content="Registrer Forestilling" FontWeight="Bold" 
                    Click="Screening_Button_Click"></Button>
        </StackPanel>


    </Grid>
</Window>
